Functions.php


sctipt.js file should be here: '/assets/js/script.js'


register_nav_menus( array(
			'top-menu' => 'Top Menu Location',
			'mobile-menu' => 'Mobile Menu Location',
	)
		);
    
function addkolon_enqueue_scripts() {
	
	wp_enqueue_script( 'scrollify', get_template_directory_uri() . '/assets/js/script.js' );
	
	}
	add_action( 'wp_enqueue_scripts', 'addkolon_enqueue_scripts' );
